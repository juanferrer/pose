<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Pose.Panels.Dopesheet"
                    xmlns:dopesheet="clr-namespace:Pose.Controls.Dopesheet">

    <Style TargetType="{x:Type dopesheet:TimelineBar}">
        <Setter Property="Panel.ZIndex" Value="0" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type dopesheet:TimelineBar}">
                    <Rectangle x:Name="Bar" Fill="#AAA8681F" />
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Bar" Property="Fill" Value="#DDA8681F"></Setter>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>